<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_height="670px"
			android:layout_width="1080px"
			android:orientation="horizontal"
			android:background="@drawable/main_bacground"
			android:gravity="center_vertical">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="100px"
				android:orientation="horizontal"/>

			<ImageView
				android:layout_height="200px"
				android:layout_width="200px"
				android:src="@drawable/icon"/>

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="20px"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:layout_width="wrap_content"
					android:text="@string/maintitle"
					android:textColor="#FFFFFF"/>

				<View
					android:layout_height="1dp"
					android:layout_width="match_parent"
					android:background="#FFFFFF"/>

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:text="@string/mainsmalltitle"
					android:textColor="#FFFFFF"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_height="100px"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="60dp"
				android:text="@string/mainbtn1"
				android:gravity="center"/>

			<View
				android:background="?android:attr/dividerHorizontal"
				android:layout_height="80px"
				android:layout_width="1dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="60dp"
				android:text="@string/mainbtn2"
				android:gravity="center"
				android:textColor="#BA000D"
				android:id="@+id/maintomusictext"/>

			<View
				android:background="?android:attr/dividerHorizontal"
				android:layout_height="80px"
				android:layout_width="1dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="60dp"
				android:text="@string/mainbtn3"
				android:gravity="center"
				android:textColor="#C4CC00"
				android:id="@+id/maintovideotext"/>

			<View
				android:background="?android:attr/dividerHorizontal"
				android:layout_height="80px"
				android:layout_width="1dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="60dp"
				android:text="@string/mainbtn4"
				android:gravity="center"
				android:textColor="#13CA00"
				android:id="@+id/maintoabouttext"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<ImageView
				android:layout_height="10px"
				android:layout_width="match_parent"
				android:src="@drawable/card_show_down"
				android:scaleType="fitXY"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_width="16dp"/>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<TextView
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:layout_width="wrap_content"
						android:text="@string/qianyan"/>

					<ImageView
						android:layout_height="200dip"
						android:layout_width="330dip"
						android:src="@drawable/main_help"/>

					<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="@string/qianyantext"
							android:layout_weight="1.0"/>

						<RelativeLayout
							android:layout_height="wrap_content"
							android:layout_width="16dp"/>

					</LinearLayout>

					<Button
						style="?android:attr/buttonBarButtonStyle"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="@string/help_btn"
						android:layout_gravity="right"
						android:id="@+id/help_btn"/>

				</LinearLayout>

			</LinearLayout>

			<ImageView
				android:layout_height="10px"
				android:layout_width="match_parent"
				android:src="@drawable/card_show_down"
				android:scaleType="fitXY"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_width="10dp"/>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<TextView
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:layout_width="wrap_content"
						android:text="@string/album_kanna_title"/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="Album by kanna"
						android:textColor="#CACACA"/>

					<ImageView
						android:layout_height="200dip"
						android:layout_width="330dip"
						android:src="@drawable/album_kanna_big"/>

					<Button
						style="?android:attr/buttonBarButtonStyle"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="@string/play_now_btn"
						android:id="@+id/to_kanna_btn"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<ImageView
			android:layout_height="10px"
			android:layout_width="match_parent"
			android:src="@drawable/card_show_down"
			android:scaleType="fitXY"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_width="10dp"/>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<TextView
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:layout_width="wrap_content"
						android:text="@string/main_title_01"/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="Album by saki"
						android:textColor="#CACACA"/>

					<ImageView
						android:layout_height="200dip"
						android:layout_width="330dip"
						android:src="@drawable/main_list_album_01"/>

					<Button
						style="?android:attr/buttonBarButtonStyle"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="@string/play_now_btn"
						android:id="@+id/to_saki_btn"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<ImageView
			android:layout_height="10px"
			android:layout_width="match_parent"
			android:src="@drawable/card_show_down"
			android:scaleType="fitXY"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_width="10dp"/>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<TextView
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:layout_width="wrap_content"
						android:text="@string/album_hina_title"/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="Album by hina"
						android:textColor="#CACACA"/>

					<ImageView
						android:layout_height="200dip"
						android:layout_width="330dip"
						android:src="@drawable/album_hina_big_1"/>

					<Button
						style="?android:attr/buttonBarButtonStyle"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="@string/play_now_btn"
						android:id="@+id/to_hina_btn"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<ImageView
			android:layout_height="10px"
			android:layout_width="match_parent"
			android:src="@drawable/card_show_down"
			android:scaleType="fitXY"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_width="10dp"/>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<TextView
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:layout_width="wrap_content"
						android:text="@string/album_other_title"/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="Album by PostCard Official"
						android:textColor="#CACACA"/>

					<ImageView
						android:layout_height="200dip"
						android:layout_width="330dip"
						android:src="@drawable/album_other_big"/>

					<Button
						style="?android:attr/buttonBarButtonStyle"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="@string/play_now_btn"
						android:id="@+id/to_other_btn"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<ImageView
			android:layout_height="10px"
			android:layout_width="match_parent"
			android:src="@drawable/card_show_down"
			android:scaleType="fitXY"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal">

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="16dp"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/flower_title"
					android:id="@+id/flower_text_title"
					android:textSize="23sp"/>

				<ImageView
					android:layout_height="200dip"
					android:layout_width="330dip"
					android:src="@drawable/flower_icon"/>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="@string/flower_text"
						android:layout_weight="1.0"
						android:id="@+id/flower_text"/>

					<RelativeLayout
						android:layout_height="wrap_content"
						android:layout_width="16dp">

					</RelativeLayout>

				</LinearLayout>

				<Button
					style="?android:attr/buttonBarButtonStyle"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="详细…"
					android:layout_gravity="right"
					android:id="@+id/to_letter_btn"/>

			</LinearLayout>

		</LinearLayout>

		<ImageView
			android:layout_height="10px"
			android:layout_width="match_parent"
			android:src="@drawable/card_show_down"
			android:scaleType="fitXY"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_width="10dp"/>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<TextView
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:layout_width="wrap_content"
						android:text="2016,Blessing!"/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="Video by PostCard Official"
						android:textColor="#CACACA"/>

					<ImageView
						android:layout_height="200dip"
						android:layout_width="330dip"
						android:src="@drawable/album_hina_big"/>

					<Button
						style="?android:attr/buttonBarButtonStyle"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="@string/play_now_btn"
						android:id="@+id/to_video_btn"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="=====没有更多了(*ﾟ∀ﾟ)====="
			android:layout_gravity="center"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"/>

	</LinearLayout>

</ScrollView>

